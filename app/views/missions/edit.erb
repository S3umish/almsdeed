<h3>Edit Mission</h3>
<small style="color: red;"><%= @errors %></small>

<form action="/missions/<%=@mission.id%>" method="POST">
    <input type="hidden" name="_method" value="PATCH">    

    <label for="title">Mission Name: </label>
    <input type="text" name="title" value="<%=@mission.title%>"><br><br>

    <label for="description">Mission Description: </label>
    <input type="text" name="description" value="<%=@mission.description%>"><br><br>

    <label for="startdate">Startdate: </label>
    <input type="Datetime" name="startdate" value="<%=@mission.startdate%>">
    
    <label for="enddate">Enddate: </label>
    <input type="Datetime" name="enddate" value="<%=@mission.enddate%>"><br><br>

    <input type="submit" value="Update Mission">
</form>